source 'https://rubygems.org'
ruby "1.9.3"

gem 'rails', '~> 4.0.0'
gem 'sass-rails'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'
gem 'haml'
gem 'therubyracer'
gem 'will_paginate'
gem 'bcrypt'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'rdoc', '~> 3.4'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'sqlite3'
end

group :production do
  gem 'pg'
  gem 'heroku'
  gem 'rails_12factor'
end