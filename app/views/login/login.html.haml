.container
  .row
    .col-md-4.col-md-offset-4
      %h3= 'Login'
      - if !@error.nil?
        .alert.alert-error
          %small= @error
  .row
    .col-md-4.col-md-offset-4
      .jumbotron
        = form_tag(login_path, :method => 'post', :id => 'login_form') do
          .form-group
            = label_tag(:email_address, 'Email Address', :style => 'width: 100%;')
            = text_field_tag(:email_address, '', :class => 'form-control', :style => 'width: 100%;', :autofocus => true)
          .form-group
            = label_tag(:password, 'Password', :style => 'width: 100%;')
            = password_field_tag(:password, '', :class => 'form-control', :style => 'width: 100%;')
          .form-group
            = label_tag(:remember_me) do
              = check_box_tag(:remember_me)
              = 'Remember me?'
          .form-group
            = submit_tag('Login', :class => 'btn btn-default pull-right')
        %br
        %small
          = link_to('Forgot password?')
          %br
          = link_to('Create new account')