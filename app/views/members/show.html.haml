- model_class = Member
.container
  .row
    .span2
    .span8
      %h3=t '.title', :default => model_class.model_name.human.titleize

      .container
        .row
          .span4
            %p
              %strong= 'First Name'
              %br
              = @member.first_name
          .span4
            %p
              %strong= 'Last Name'
              %br
              = @member.last_name
        .row
          .span4
            %p
              %strong= 'Email Address'
              %br
              %a{ :href => 'mailto:' + @member.email_address }= @member.email_address
          .span4
            %p
              %strong= 'Phone Number'
              %br
              %a{ :href => 'tel:' + @member.phone_number }= @member.phone_number
        .row
          .span8
            %p
              %strong= 'Address 1'
              %br
              = @member.address1
        .row
          .span8
            %p
              %strong= 'Address 2'
              %br
              = @member.address2 ||= '&nbsp;'
        .row
          .span4
            %p
              %strong= model_class.human_attribute_name(:city)
              %br
              = @member.city
          .span1
            %p
              %strong= model_class.human_attribute_name(:state)
              %br
              = @member.state
          .span3
            %p
              %strong= model_class.human_attribute_name(:zipcode)
              %br
              = @member.zipcode
      

      .row
        %br
        %div{ :class => 'span7', :style => 'text-align: right;' }
          = link_to t('.back', :default => t("helpers.links.back")), members_path(:sort => session[:members_sort], :direction => session[:members_direction], :page => session[:members_page], :search => session[:members_search]), :class => 'btn'
          - if allow_edits
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_member_path(@member), :class => 'btn'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), member_path(@member), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
