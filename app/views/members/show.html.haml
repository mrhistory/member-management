- model_class = Member
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:email_address) + ':'
  %br
  = @member.email_address
%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @member.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @member.last_name
%p
  %strong= model_class.human_attribute_name(:address1) + ':'
  %br
  = @member.address1
%p
  %strong= model_class.human_attribute_name(:address2) + ':'
  %br
  = @member.address2
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @member.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @member.state
%p
  %strong= model_class.human_attribute_name(:zipcode) + ':'
  %br
  = @member.zipcode
%p
  %strong= model_class.human_attribute_name(:phone_number) + ':'
  %br
  = @member.phone_number

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), members_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_member_path(@member), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), member_path(@member), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
