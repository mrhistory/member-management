- model_class = User
%h3=t '.title', :default => model_class.model_name.human.pluralize.titleize

= form_tag(members_path, method: 'get', :class => 'form-inline', :id => 'members_search') do
  .form-group
    = hidden_field_tag(:direction, params[:direction])
    = hidden_field_tag(:sort, params[:sort])
    = text_field_tag(:search, params[:search])
    = submit_tag('Search', :class => 'btn btn-mini btn-default')
    = link_to('Clear', members_path, :class => 'btn btn-mini btn-default')

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.id, user_path(user)

= link_to t('.new', :default => t("helpers.links.new")), new_user_path, :class => 'btn btn-primary'
